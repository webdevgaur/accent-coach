rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // raw uploads â€“ owner write, not public read
    match /raw/{userId}/{lessonId}/{fileName} {
      allow write: if request.auth != null && request.auth.uid == userId;
      allow read: if false;
    }
    // (future) publicly-cached lesson audio
    match /tts/{fileName} {
      allow read: if true;
    }
  }
}
